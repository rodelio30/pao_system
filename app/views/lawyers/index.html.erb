<% if current_user && current_user.admin %>

<%= link_to 'New Lawyer', new_lawyer_path, class: 'btn btn-success btn-md mr-4', style: 'float: right' %>

<% end %>
<br>
<div class="m-4">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">User</th>
      <% if current_user && current_user.admin %>
      <th scope="col">Edit</th>
      <th scope="col">Back</th>
      <th scope="col">Delete</th>
      <% else %>
      <th scope="col">Show</th>
      <% end %>

    </tr>
  </thead>
  <tbody>
      <% @lawyers.each do |lawyer| %>
        <tr>
          <td><%= lawyer.name %></td>
          <td><%= lawyer.user.username %></td>
          <td><%= link_to 'Show', lawyer %></td>
          <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_lawyer_path(lawyer) %></td>
          <td><%= link_to 'Delete', lawyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
